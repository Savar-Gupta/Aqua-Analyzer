USING DS18B20 TEMPERATURE SENSOR
*********/

// One Wire Library Used to Communicate to Sensor and DallasTempature Library Used to Read Temp Data
#include <OneWire.h>
#include <DallasTemperature.h>


// Defines GPIO pin where the DS18B20 Sensor is connected [Pin 4]
const int oneWireBus = 4;     

// Setup a oneWire instance to communicate with any OneWire devices
OneWire oneWire(oneWireBus);

// Pass our oneWire reference to Dallas Temperature sensor 
DallasTemperature sensors(&oneWire);

void setup() {
  // Start the Serial Monitor w/ Baud Rate 115200
  Serial.begin(115200);
  // Start the DS18B20 sensor
  sensors.begin();
}

void loop() {
  // Initiates Temp Measurement 
  sensors.requestTemperatures(); 
  // Reads and Stores Temp Data into a float 
  float temperatureC = sensors.getTempCByIndex(0);
  float temperatureF = sensors.getTempFByIndex(0);
  Serial.print(temperatureC);
  Serial.println("ºC");
  Serial.print(temperatureF);
  Serial.println("ºF");
  // Delay 5 sec until next iteration of the loop 
  delay(5000);
}
